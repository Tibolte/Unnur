<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/layout_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                >

            <ImageView
                    android:id="@+id/img_location"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:background="@color/white"
                    />

            <RelativeLayout
                    android:id="@+id/item_footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_name_holder"
                    android:layout_above="@+id/img_location"
                    android:layout_alignParentBottom="true"
                    >

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        >

                    <TextView
                            android:id="@+id/txtRegion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Bjargartangi,"
                            />


                    <TextView
                            android:id="@+id/txtAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="101 Reykjavik"
                            />


                </LinearLayout>


                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        >

                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginTop="5dp"
                                  android:orientation="horizontal">

                        <TextView
                                android:id="@+id/txtRoomSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="3 herb - "
                                />

                        <TextView
                                android:id="@+id/txtSquareSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="80 fm"
                                />

                    </LinearLayout>


                    <TextView
                            android:id="@+id/txtPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:text="195 þús"
                            android:layout_marginBottom="5dp"
                            />

                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>