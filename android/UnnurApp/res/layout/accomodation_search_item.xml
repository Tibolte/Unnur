<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

        <ImageView
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:id="@+id/img_location"
                android:scaleType="fitXY"
                android:src="@drawable/placeholder_house"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/txtPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green_main"
                        android:layout_alignParentLeft="true"
                        android:text="1,950,000 .kr"/>

                <TextView
                        android:id="@+id/txtStreet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/label_grey"
                        android:layout_alignParentRight="true"
                        android:text="MelaheiÃ°i 15"/>

            </RelativeLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                <TextView
                        android:id="@+id/txtRoomSize"
                        android:layout_width="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="5 herb"/>

                <TextView
                        android:id="@+id/txtSeparator1"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="12dp"
                        android:layout_marginRight="5dp"
                        android:text="|"/>

                <TextView
                        android:id="@+id/txtSquareSize"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:layout_height="wrap_content"
                        android:text="100 fm"/>

                <TextView
                        android:id="@+id/txtSeparator2"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="|"/>

                <TextView
                        android:id="@+id/txtLongTerm"
                        android:layout_width="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Leigutimi"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    >

                <TextView
                        android:id="@+id/txtDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/label_grey"
                        android:textSize="10dp"
                        android:lines="2"
                        android:ellipsize="end"
                        android:text="@string/debug_description"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>