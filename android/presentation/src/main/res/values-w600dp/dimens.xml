    <dimen name="item_accomodations_margin">@dimen/activity_horizontal_margin</dimen>

    <dimen name="activity_horizontal_margin">64dp</dimen>
    <dimen name="activity_horizontal_margin_half">16dp</dimen>
    <dimen name="activity_horizontal_margin_double">64dp</dimen>
    <dimen name="activity_horizontal_margin_double_double">128dp</dimen>

    <dimen name="item_accomodation_width">190dp</dimen>
